<footer class="text-white pt-5 pb-4" style="background: var(--gradient-main);">
  <div class="container text-center text-md-start">
    <div class="row text-center text-md-start">
      
      <!-- About -->
      <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
        <h5 class="text-uppercase mb-4 font-weight-bold" style="color: #AC8968; letter-spacing: 1px;">ARE'S SALON</h5>
        <p class="small">
            Professional beauty and salon services. We bring you the latest trends in hair, skin, and wellness with a touch of luxury.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
        <h6 class="text-uppercase mb-4 font-weight-bold" style="color: #AC8968;">Quick Links</h6>
        <p><a href="/" class="text-white text-decoration-none small">Home</a></p>
        <p><a href="/about" class="text-white text-decoration-none small">About Us</a></p>
        <p><a href="/Facilities" class="text-white text-decoration-none small">Services</a></p>
        <p><a href="/gallery" class="text-white text-decoration-none small">Gallery</a></p>
      </div>

      <!-- Contact -->
      <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
        <h6 class="text-uppercase mb-4 font-weight-bold" style="color: #AC8968;">Contact</h6>
        <% if(settings) { %>
            <p class="small"><i class="bi bi-geo-alt me-3"></i> <%= settings.address %></p>
            <p class="small"><i class="bi bi-envelope me-3"></i> <%= settings.email %></p>
            <p class="small"><i class="bi bi-phone me-3"></i> <%= settings.phone %></p>
        <% } else { %>
            <p class="small">Loading contact info...</p>
        <% } %>
      </div>
    </div>

    <hr class="my-3" style="opacity: 0.2;">

    <!-- Copyright -->
    <div class="row d-flex align-items-center">
      <div class="col-md-7 col-lg-8 text-center text-md-start">
        <div class="p-2 small">
          <% if(settings && settings.copyright) { %>
             © <%= new Date().getFullYear() %> <%= settings.copyright %>. 
          <% } else { %>
             © <%= new Date().getFullYear() %> ARE's Salon. 
          <% } %>
          All Rights Reserved.
        </div>
      </div>
      
      <div class="col-md-5 col-lg-4 text-center text-md-end">
        <a class="btn btn-sm btn-outline-light rounded-circle me-1" href="#"><i class="bi bi-facebook"></i></a>
        <a class="btn btn-sm btn-outline-light rounded-circle me-1" href="#"><i class="bi bi-instagram"></i></a>
        <a class="btn btn-sm btn-outline-light rounded-circle" href="#"><i class="bi bi-whatsapp"></i></a>
      </div>
    </div>
  </div>
</footer>