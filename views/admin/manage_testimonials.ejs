<!DOCTYPE html>
<html lang="en">
<head>
    <title>Manage Testimonials</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<%- include("navbar") %>

<div class="admin-main">
    <div class="row">
        <div class="col-md-5">
            <div class="card p-3 shadow-sm">
                <h4>Add Testimonial</h4>
                <form action="/admin/save_testimonial" method="POST">
                    <label>Client Name</label>
                    <input type="text" name="client_name" class="form-control mb-2" required>
                    <label>Review</label>
                    <textarea name="review" class="form-control mb-2" placeholder="Review" rows="3" required></textarea>
                    <label>Rating (1-5)</label>
                    <input type="number" name="rating" class="form-control mb-3" max="5" min="1" value="5">
                    <button class="btn btn-primary w-100" style="background: var(--primary-brown); border:none;">Add Review</button>
                </form>
            </div>
        </div>
        <div class="col-md-7">
            <div class="card p-3 shadow-sm">
                <h4>Reviews List</h4>
                <table class="table table-striped">
                    <thead><tr><th>Name</th><th>Review</th><th>Action</th></tr></thead>
                    <tbody>
                        <% testimonials.forEach(t => { %>
                        <tr>
                            <td><%= t.client_name %></td>
                            <td><%= t.review %></td>
                            <td><a href="/admin/delete_testimonial/<%= t.id %>" class="btn btn-danger btn-sm">Del</a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include("footer") %>
</body>
</html>