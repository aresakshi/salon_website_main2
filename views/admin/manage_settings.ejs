<!DOCTYPE html>
<html lang="en">
<head>
    <title>Manage Settings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<%- include("navbar") %>

<div class="admin-main">
    <div class="card p-4 shadow-sm">
        <h3>Footer & Contact Information</h3>
        <form action="/admin/update_settings" method="POST">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label>Address</label>
                    <input type="text" name="address" class="form-control" value="<%= settings.address || '' %>" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label>Phone Number</label>
                    <input type="text" name="phone" class="form-control" value="<%= settings.phone || '' %>" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label>Email Address</label>
                    <input type="email" name="email" class="form-control" value="<%= settings.email || '' %>" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label>Copyright Text</label>
                    <input type="text" name="copyright" class="form-control" value="<%= settings.copyright || '' %>">
                </div>
            </div>
            <button class="btn btn-success mt-2">Update Settings</button>
        </form>
    </div>
</div>
<%- include("footer") %>
</body>
</html>