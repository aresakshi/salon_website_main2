<!DOCTYPE html>
<html lang="en">
<head>
    <title>Appointment List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<%- include("navbar") %>

<div class="admin-main">
    <div class="container-fluid bg-white p-4 mt-4 rounded shadow-sm">
        <h3>Appointments</h3>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Sr No</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Service</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if(appointments.length > 0) { %>
                    <% appointments.forEach(function(val, i){ %>
                        <tr>
                            <td><%= i + 1 %></td>
                            <td><%= val.client_name %></td>
                            <td><%= val.client_phone %></td>
                            <td><%= val.service_name %></td>
                            <td><%= val.appointment_date.toISOString().split('T')[0] %></td>
                            <td>
                                <span class="badge bg-<%= val.status === 'Confirmed' ? 'success' : (val.status === 'Cancelled' ? 'danger' : 'warning') %> text-dark"><%= val.status %></span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="/admin/update_status/<%= val.id %>/Confirmed" class="btn btn-outline-success">Confirm</a>
                                    <a href="/admin/update_status/<%= val.id %>/Completed" class="btn btn-primary">Done</a>
                                    <a href="/admin/update_status/<%= val.id %>/Cancelled" class="btn btn-outline-danger">Cancel</a>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr><td colspan="7" class="text-center">No appointments found</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
<%- include("footer") %>
</body>
</html>