<!DOCTYPE html>
<html lang="en">
<head>
    <title>Manage Sliders</title>
    <link rel="stylesheet" href="/css/style.css"> <!-- Using main style for simplicity -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<%- include("navbar") %>
<div class="admin-main">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Hero Slider Management</h3>
    </div>

    <div class="card p-4 mb-4 shadow-sm">
        <h5>Add New Slide</h5>
        <form action="/admin/save_slider" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label>Title</label>
                    <input type="text" name="title" class="form-control" required>
                </div>
                <div class="col-md-4 mb-3">
                    <label>Subtitle</label>
                    <input type="text" name="subtitle" class="form-control">
                </div>
                <div class="col-md-4 mb-3">
                    <label>Image (1920x1080)</label>
                    <input type="file" name="image" class="form-control" required>
                </div>
            </div>
            <button class="btn-main">Upload Slide</button>
        </form>
    </div>

    <div class="row">
        <% sliders.forEach(function(slide){ %>
            <div class="col-md-4 mb-4">
                <div class="card position-relative">
                    <img src="<%= slide.image_path %>" class="card-img-top" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5><%= slide.title %></h5>
                        <p class="small text-muted"><%= slide.subtitle %></p>
                        <a href="/admin/delete_slider/<%= slide.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete?')">Delete</a>
                    </div>
                    <span class="badge bg-<%= slide.status === 'active' ? 'success' : 'secondary' %> position-absolute top-0 end-0 m-2"><%= slide.status %></span>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<%- include("footer") %>
</body>
</html>