<!DOCTYPE html>
<html lang="en">
<head>
    <title>Manage Team</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<%- include("navbar") %>

<div class="admin-main">
    <div class="row">
        <div class="col-md-4">
            <div class="card p-3 shadow-sm">
                <h4>Add Team Member</h4>
                <form action="/admin/save_team" method="POST" enctype="multipart/form-data">
                    <input type="text" name="name" class="form-control mb-2" placeholder="Name" required>
                    <input type="text" name="role" class="form-control mb-2" placeholder="Role (e.g. Stylist)" required>
                    <label>Image</label>
                    <input type="file" name="image" class="form-control mb-3">
                    <button class="btn btn-primary w-100" style="background: var(--primary-brown); border:none;">Save</button>
                </form>
            </div>
        </div>
        <div class="col-md-8">
            <div class="row">
                <% team.forEach(member => { %>
                <div class="col-md-4 mb-3">
                    <div class="card text-center">
                        <img src="<%= member.image_path %>" class="card-img-top" style="height:200px; object-fit:cover;">
                        <div class="card-body">
                            <h5><%= member.name %></h5>
                            <p class="text-muted"><%= member.role %></p>
                            <a href="/admin/delete_team/<%= member.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Delete?')">Delete</a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<%- include("footer") %>
</body>
</html>